<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewmodel"
            type="com.example.cw3.viewmodels.CourseStatisticsVM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.CourseStatistics">


        <TextView
            android:id="@+id/graphAxisYheader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="68dp"
            android:layout_marginBottom="110dp"
            android:rotation="0"
            android:text="@string/average_pace"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/idGraphView"
            app:layout_constraintStart_toEndOf="@+id/progressList"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/graphAxisXheader"
            android:layout_width="216dp"
            android:layout_height="29dp"
            android:layout_marginStart="226dp"
            android:layout_marginEnd="57dp"
            android:layout_marginBottom="1dp"
            android:text="@string/courses_by_date"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/returnButton"
            app:layout_constraintTop_toBottomOf="@+id/idGraphView" />

        <Spinner
            android:id="@+id/progressList"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginStart="67dp"
            android:layout_marginBottom="16dp"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/returnButton"
            app:layout_constraintEnd_toStartOf="@+id/graphAxisYheader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sortProgress"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/sortProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="67dp"
            android:layout_marginTop="46dp"
            android:layout_marginEnd="203dp"
            android:text="@string/show_progress_for"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/progressList"
            app:layout_constraintEnd_toStartOf="@+id/idGraphView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

        <com.jjoe64.graphview.GraphView
            android:id="@+id/idGraphView"
            android:layout_width="275dp"
            android:layout_height="175dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="1dp"
            app:layout_constraintBottom_toTopOf="@+id/graphAxisXheader"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/graphHeader" />

        <TextView
            android:id="@+id/overallStatsHeader"
            android:layout_width="271dp"
            android:layout_height="36dp"
            android:layout_marginStart="206dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="206dp"
            android:text="@string/overall_statistics"
            android:textAlignment="center"
            android:textSize="34sp"
            app:layout_constraintBottom_toTopOf="@+id/tableLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/returnButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="91dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="224dp"
            android:layout_marginBottom="17dp"
            android:text="@string/returnText"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/idGraphView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progressList" />

        <TextView
            android:id="@+id/graphHeader"
            android:layout_width="191dp"
            android:layout_height="28dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="97dp"
            android:layout_marginEnd="67dp"
            android:layout_marginBottom="1dp"
            android:text="@string/stats_progression"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/idGraphView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tableLayout"
            app:layout_constraintTop_toTopOf="parent" />

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="27dp"
            app:layout_constraintBottom_toTopOf="@+id/sortProgress"
            app:layout_constraintEnd_toStartOf="@+id/idGraphView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/overallStatsHeader">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/totalDistanceMain"
                    android:layout_width="88dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/border"
                    android:lines="3"
                    android:text="@string/total_distance_traversed_m"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/totalPaceMain"
                    android:layout_width="101dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/border"
                    android:text="@string/overall_average_pace_m_s"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/totalTimeMain"
                    android:layout_width="93dp"
                    android:layout_height="56dp"
                    android:background="@drawable/border"
                    android:text="@string/total_time_running_hh_mm_ss"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/totalCaloriesMain"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/border"
                    android:text="@string/total_calories_burnt"
                    android:textAlignment="center" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/totalDistanceValue"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:text="@{viewmodel.totalDistanceString}"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/averagePaceValueMain"
                    android:layout_width="16dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/border"
                    android:text="@{viewmodel.averagePaceString}"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/totalTimeValueMain"
                    android:layout_width="22dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/border"
                    android:text="@{viewmodel.totalTimeString}"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/totalCaloriesMainValue"
                    android:layout_width="38dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/border"
                    android:text="@{viewmodel.totalCaloriesString}"
                    android:textAlignment="center" />
            </TableRow>

        </TableLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>